<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>


<!--  here this line belongs to entity class -->
    <class name="hms.entity.User" table="User">
    <!--  name = variable name type = datatype -->
    <!--   this line belongs to entity class -->
        <id name="username" type="string">
            <column name="Username" />
        </id>
                                                             
        <property name="password" type="string" not-null="true"><!--here this line belongs to entity class -->
            <column name="Password" /><!--column name in the Database table -->
        </property>
        
        <property name="usertype" type="string" not-null="true"><!--here this line belongs to entity class -->
            <column name="Usertype" /><!--column name in the Database table -->
        </property>
                            
    </class>
</hibernate-mapping>